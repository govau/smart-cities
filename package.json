{
  "name": "smart-cities",
  "version": "13.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govau/smart-cities.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govau/smart-cities/issues"
  },
  "engines": {
    "node": "^8.5.0"
  },
  "config": {
    "exportSrc": "'build/**/!(index.html)' '!build/__mocks__/*'",
    "exportDist": "backend/public/"
  },
  "dependencies": {
    "@std/esm": "^0.11.0",
    "classnames": "^2.2.5",
    "core-js": "^2.5.0",
    "csv": "^1.1.1",
    "get-stdin": "^5.0.1",
    "highcharts": "^6.0.2",
    "html-entities": "^1.2.1",
    "identity-obj-proxy": "3.0.0",
    "lodash": "^4.17.5",
    "numeral": "^2.0.6",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "sockjs-client": "^1.1.4",
    "stats-lite": "^2.1.0",
    "strip-ansi": "^4.0.0",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "acorn": "^6.0.4",
    "autoprefixer": "7.1.4",
    "babel-core": "6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "21.0.2",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.0.3",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "^2.0.1",
    "css-loader": "0.28.7",
    "dotenv": "^4.0.0",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "^0.11.2",
    "fs-extra": "4.0.2",
    "html-webpack-plugin": "2.30.1",
    "jest": "^21.2.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.10.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "react-dev-utils": "^3.0.0",
    "react-error-overlay": "^1.0.10",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "0.18.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.5.9",
    "webpack": "2.6.1",
    "webpack-dev-server": "^2.9.7",
    "webpack-manifest-plugin": "1.3.2"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom --colors",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "CI=true npm run test -- --coverage --runInBand --colors",
    "generate-city-data": "node -r @std/esm scripts/convert.js < resources/cities.csv > public/data/smartCitiesData.json",
    "deploy": "npm version major && git push --tags"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/requestAnimationFrameStub.js",
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTestFrameworkScriptFile.js",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/scripts/*.(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "coveragePathIgnorePatterns": [
      "(.story)\\.(js)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "\\.scss$": "identity-obj-proxy"
    },
    "globals": {
      "__DEV__": true
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "@std/esm": {
    "esm": "js"
  }
}
